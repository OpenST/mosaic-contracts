{
    "extends": [
        "airbnb-base"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "no-console": "off",
        "no-underscore-dangle": "off",
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": true
            }
        ]
    },
    "env": {
        "mocha": true,
        "node": true,
        "es6": true
    },
    "globals": {
        "artifacts": false,
        "contract": false,
        "assert": false
    }
}
